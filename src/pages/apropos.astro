<style>
  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  .content-title {
    font-size: var(--text-l);
  }

  .title-break {
    margin-top: 1rem;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    margin-top: 0.5rem;
  }

  .skills-logo {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .skills-logo svg {
    width: 1.5rem;
    height: auto;
  }

  .content-cv {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-content: space-between;
  }

  .content-cv-img {
    width: 50%;
    height: auto;
  }

  .content-cv-pdf {
    text-align: center;
    display: block;
    margin: 15px auto 0;
    color: var(--link-color); /* Utilise la couleur définie */
    font-weight: 600;
    font-size: var(--text-base); /* Taille de texte de base */
    text-decoration: none;
    transition: color 0.2s ease-in-out;
  }

  .cv-thumbnail {
    width: 50%;
    cursor: pointer;
    transition: transform 0.3s ease;
    display: block;
    margin: auto;
  }

  .cv-thumbnail:hover {
    transform: scale(1.05);
  }

  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .lightbox img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    margin: auto;
    padding: 1rem;
    transition: transform 0.3s ease;
    box-shadow: none;
  }

  @media (min-width: 50em) {
    .about {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }

  @media (max-width: 600px) {
    .cv-thumbnail {
      width: 95%;
    }

    .section-title {
      margin-bottom: 0.5rem;
    }
  }
</style>

<!-- Script pour l'ouverture / fermeture du cv taille réelle -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const thumbnail = document.getElementById("cvThumbnail");
    const lightbox = document.getElementById("lightbox");

    thumbnail.onclick = () => {
      lightbox.style.display = "flex";
    };

    lightbox.onclick = () => {
      lightbox.style.display = "none";
    };
  });
</script>
